generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(DEPARTMENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdJobs  Job[] @relation("JobCreator")
  postedJobs   Job[] @relation("JobPosters")
}

enum Role {
  HR
  DEPARTMENT
}

model Candidate {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  createdAt DateTime @default(now())
}

model JobDetails {
  jobId            Int     @id
  description      String
  requirements     String[]
  responsibilities String[]
  experienceLevel  Int
  salaryMin        Int
  salaryMax        Int

  job Job @relation(fields: [jobId], references: [id])
}


enum EmploymentType {
  FullTime
  PartTime
  Internship
}

enum WorkMode {
  Onsite
  Remote
  Hybrid
}

enum JobStatus {
  Open
  Closed
}

model Job {
  id               Int            @id @default(autoincrement())
  title            String
  department       String
  location         String

  employmentType   EmploymentType
  workMode         WorkMode

  
  status           JobStatus       @default(Open)

  createdBy   Int
  creator     User   @relation("JobCreator", fields: [createdBy], references: [id])

  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  deadline         DateTime?

  details JobDetails?

  posters     User[] @relation("JobPosters")

}


